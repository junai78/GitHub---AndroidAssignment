<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.coursework.newinti.androidassignment.MainActivity">

    <!--To display the result of input from user-->
    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="30sp"/>

    <!--non editable. to display the numbers from user input-->
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/infoTextView"
        android:enabled="false"
        android:gravity="bottom"
        android:lines="2"
        android:maxLines="2"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnSeven"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:text="7"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnEight"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_toRightOf="@id/btnSeven"
        android:text="8"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnNine"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_toRightOf="@id/btnEight"
        android:text="9"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnFour"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSeven"
        android:text="4"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnFive"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/btnEight"
        android:layout_below="@id/btnEight"
        android:text="5"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnSix"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/btnNine"
        android:layout_below="@id/btnNine"
        android:text="6"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnOne"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnFour"
        android:text="1"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnTwo"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/btnEight"
        android:layout_below="@id/btnFive"
        android:text="2"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnThree"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/btnNine"
        android:layout_below="@id/btnSix"
        android:text="3"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnDot"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnOne"
        android:text="."
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnZero"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnDot"
        android:layout_alignBottom="@+id/btnDot"
        android:layout_toEndOf="@+id/btnOne"
        android:layout_toRightOf="@+id/btnOne"
        android:text="0"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnEqual"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/btnNine"
        android:layout_below="@id/btnThree"
        android:text="="
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnDivide"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnNine"
        android:layout_toRightOf="@id/btnNine"
        android:text="/"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnMultiply"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnSix"
        android:layout_toRightOf="@id/btnSix"
        android:text="*"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnSubtract"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnThree"
        android:layout_toRightOf="@id/btnThree"
        android:text="-"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnAdd"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnEqual"
        android:layout_toRightOf="@id/btnEqual"
        android:text="+"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnClear"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/btnAdd"
        android:layout_below="@id/btnAdd"
        android:text="C"
        android:textSize="25sp"/>
</RelativeLayout>